<%- include("partials/header2.ejs") -%>
<h1>Register</h1>
 <main class="form-signin">
   <form class="" action="/register" method="post">
     <img class="mb-4" src="/images/bat.JPG" alt="" width="72" height="57">
     <h2 class="h3 mb-3 fw-normal">Please Enter Credentials</h2>
     <div class="form-floating">
       <input type="text" name="name" class="form-control" id="floatingInput" placeholder="name">
       <label for="floatingInput">Name</label>
     </div>
     <div class="form-floating">
       <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
       <label for="floatingInput">Email address</label>
     </div>
     <div class="form-floating">
       <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
       <label for="floatingPassword">Password</label>
     </div>
     <br>
     <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
     <p class="mt-5 mb-3 text-muted">J-Kizzy</p>
   </form>
   <a href="/login">Login</a>
 </main>



   </body>
