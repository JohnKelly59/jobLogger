<%- include("partials/header.ejs") -%>




<section class="container-fluid bg-dark p-5 opacity-75">
  <div class="row ct text-light">
    <div class="col-lg-6">
      <h3><b>Archives</b></h3>
      <h5>Here in the Archives page, you can view all of your old job-cards.  </h5>
      <h5>If you want to delete a card from this log, simply click the "Delete" button.</h5>
      <h5>To put job-card card back into the home, simply click the "Restore" button.</h5>
    </div>
  
    <div class="col-lg-6">
      <img class="icon" src="images/archive.png" alt="archive icon" class="rotate ct">
    </div>
  </div>
  </div>
  </section>


<section class="info">
<div class="container-fluid jobs">
<div class="row cw">
  <% for(var i = 0; i < archives.length; i++){  %>
  <div class="col-lg-4 ">


    <div class="card text-light bg-dark mb-3 " style="max-width: 18rem;">
      <div class="card-header">
        <h3><%= archives[i].company %></h3>
      </div>
      <div class="card-body">
        <h2 class="card-title"><%= archives[i].title %></h2>
        <p class="card-text"><%= archives[i].interest %></p>
        <p class="card-text"><%= archives[i].salary %></p>
        <p class="card-text"><%= archives[i].time %></p>
        <div class=" btn-group">
        <form action="/back" method="post">
          <button name= "restore" class="btn bttn btn-outline-light" value = "<%= archives[i].id %>" type="submit">Restore</button>
        </form>
        <form action="/archive" method="post">
        <button name= "deleteBTN" class="btn bttn btn-outline-light" value = "<%= archives[i].id %>" type="submit">Delete</button>
        </form>
      </div>
      </div>

    </div>
  </div>
    <% } %>
  </div>
  </div>
  </section>
  <script src="/javascript/home.js" charset="utf-8"></script>
  <%- include("partials/footer.ejs") -%>
